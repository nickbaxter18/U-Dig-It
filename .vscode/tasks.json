{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend Port 3000",
      "type": "shell",
      "command": "cd frontend && pnpm dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting.*|.*Cleaning.*|ðŸš€.*|ðŸ§¹.*",
          "endsPattern": "(Local|Network):.*http.*3000"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "runOptions": {
        "instanceLimit": 1,
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Deep Clean Frontend",
      "type": "shell",
      "command": "bash start-frontend-deep-clean.sh",
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": "âš ï¸.*DEEP CLEAN",
          "endsPattern": "(Local|Network):.*http"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Stop Frontend Server",
      "type": "shell",
      "command": "pkill -9 -f 'next dev' && pkill -9 -f 'next-server' && lsof -ti:3000 | xargs -r kill -9 2>/dev/null && echo 'âœ… Frontend server stopped'",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
