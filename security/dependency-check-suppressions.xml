<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress false positives for development dependencies -->
    <suppress>
        <notes><![CDATA[
        Suppress false positives for development dependencies that are not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/.*@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>

    <!-- Suppress known false positives for specific packages -->
    <suppress>
        <notes><![CDATA[
        Suppress false positive for lodash vulnerability that doesn't affect our usage
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/lodash@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>

    <!-- Suppress false positives for test dependencies -->
    <suppress>
        <notes><![CDATA[
        Suppress vulnerabilities in test dependencies that don't affect production
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/.*@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
        <filePath regex="true">.*test.*</filePath>
    </suppress>
</suppressions>
